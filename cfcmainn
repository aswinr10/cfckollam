  <script>
    // Simple interactivity
    document.addEventListener('DOMContentLoaded',()=>{
      // reveal sections on scroll
      const observers = document.querySelectorAll('.fade-in');
      const io = new IntersectionObserver(entries=>{
        entries.forEach(e=>{ if(e.isIntersecting) e.target.classList.add('visible') })
      },{threshold:0.12});
      observers.forEach(el=>io.observe(el));

      // menu toggle
      const toggle = document.querySelector('.menu-toggle');
      toggle.addEventListener('click',()=>{
        const nav = document.querySelector('nav');
        const open = nav.style.display !== 'flex';
        nav.style.display = open ? 'flex' : 'none';
        toggle.setAttribute('aria-expanded', String(open));
      });
    });

    // Order capture (client-side demo) ‚Äî replace with server-side integration
    function placeOrder(e,form,productName,price){
      e.preventDefault();
      const fd = new FormData(form);
      const order = {
        product: productName,
        price: price,
        size: fd.get('size'),
        qty: fd.get('qty'),
        name: fd.get('name'),
        mobile: fd.get('mobile'),
        address: fd.get('address'),
        payment: 'Cash on Delivery'
      };
      // Basic validation for Indian mobile number
      if(!/^[0-9]{10}$/.test(order.mobile)){
        alert('Please enter a valid 10-digit mobile number');
        return false;
      }
      // Here: send order to your backend / WhatsApp API / Google Sheets.
      // For demo, we show a confirmation modal and copy order to clipboard
      const body = `Product: ${order.product}\nPrice: ‚Çπ${order.price}\nSize: ${order.size}\nQty: ${order.qty}\nName: ${order.name}\nMobile: ${order.mobile}\nAddress: ${order.address}\nPayment: ${order.payment}`;
      document.getElementById('om-title').innerText = 'Order Summary';
      document.getElementById('om-body').innerText = body + '\n\nA club representative will contact you on the provided mobile number.';
      document.getElementById('orderModal').style.display='flex';

      // copy to clipboard to help manual order receive
      navigator.clipboard?.writeText(body).catch(()=>{});

      // optionally, open WhatsApp prefilled message (uncomment and replace club number)
      // const clubNumber = '919876543210';
      // const waUrl = `https://wa.me/${clubNumber}?text=${encodeURIComponent(body)}`;
      // window.open(waUrl,'_blank');

      form.reset();
      return false;
    }

    function contactSubmit(e){
      e.preventDefault();
      const fd = new FormData(e.target);
      const name = fd.get('name');
      const phone = fd.get('phone');
      if(!/^[0-9]{10}$/.test(phone)){ alert('Please enter a valid 10-digit mobile number'); return false }
      alert('Thanks ' + name + '! We will contact you soon on ' + phone);
      e.target.reset();
      return false;
    }

  </script>
